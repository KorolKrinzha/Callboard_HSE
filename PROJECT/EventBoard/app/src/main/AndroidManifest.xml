<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eventboard">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/Theme.MyApplication">
        <activity
            android:name=".ParticipantsActivity"
            android:exported="true" />
        <activity
            android:name=".EventEditActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".CreatorActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ProfileActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".bottom_nav_activities.RecommendedActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.eventboard.LatestEventsActivity" />
        </activity>
        <activity
            android:name=".bottom_nav_activities.MyEventsActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.eventboard.LatestEventsActivity" />
        </activity>
        <activity
            android:name=".bottom_nav_activities.FavoritesActivities"
            android:exported="true"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.eventboard.LatestEventsActivity" />
        </activity>
        <activity
            android:name=".EventAgreeActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.eventboard.LatestEventsActivity" />
        </activity>
        <activity
            android:name=".NewEventActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LatestEventsActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">

        </activity>
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.eventboard.RegisterActivity" />
        </activity>
    </application>

</manifest>